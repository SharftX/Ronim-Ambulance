# Enable URL rewriting
RewriteEngine On

# Redirect old URL with %20 (space) to new clean URL
RewriteRule ^ronim%20nursing\.html$ /ronim-nursing [R=301,L,NE]
RewriteRule ^ronim%20nursing$ /ronim-nursing [R=301,L,NE]

# Remove index.html from root
RewriteCond %{THE_REQUEST} /index\.html [NC]
RewriteRule ^index\.html$ / [R=301,L]

# Redirect .html extensions to clean URLs
RewriteCond %{THE_REQUEST} ^GET\ /(.*)\.html [NC]
RewriteRule ^(.*)\.html$ /$1 [R=301,L,NE]

# Serve .html files for clean URLs
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.+)$ $1.html [L]